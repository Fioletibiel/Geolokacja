<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pl.edu.pjwstk.pawelkaminski.proj4smb.geolokacja.DodajNoweMiejsce">

    <TextView
        android:id="@+id/tv_nazwa_miejsca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="25dp"
        android:text="Podaj nazwÄ™ nowego miejsca:" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="12"
        android:layout_below="@+id/tv_nazwa_miejsca"
        android:layout_alignParentStart="true"
        android:id="@+id/et_nazwa_miejsca"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Opisz nowe miejsce:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_nazwa_miejsca"
        android:layout_alignParentStart="true"
        android:layout_marginTop="18dp"
        android:id="@+id/tv_opis_miejsca"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="12"
        android:layout_below="@+id/tv_opis_miejsca"
        android:layout_alignParentStart="true"
        android:id="@+id/et_opis_miejsca"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/btn_dodaj_nowe_miejsce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="142dp"
        android:onClick="DodajNoweMiejsce"
        android:text="Dodaj nowe miejsce" />

</RelativeLayout>
